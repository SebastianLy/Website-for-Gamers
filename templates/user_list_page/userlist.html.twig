{%  extends 'base.html.twig' %}

{% block title %}
    UZYTKOWNICY: {{ count }}
    <form action="searchuser" method="post" style="display: inline-block; float: right">
            <input type="text" style="display: inline-block; width: 130px" name="name">
            <button type="submit" class="btn btn-primary" style="border-color:white; display: inline-block">SZUKAJ</button>
    </form>
{% endblock %}

{% block body %}
    <tr class="headingTr">
        <td colspan="2">NAZWA</td>
        <td colspan="2">E-MAIL</td>
        <td>CZYNNOSCI</td>
    </tr>
    {% for user in users %}
        <tr>
            <td colspan="2">{{ user.name }}</td>
            <td colspan="2">{{ user.email}}</td>
            <td>
                <form action="ban" method="post" style="display: inline-block">
                    <input type="hidden" name="id" value="{{ user.id }}">
                    <button type="submit" class="btn btn-primary" style="border-color:white">ZBANUJ</button>
                </form>
                <form action="deleteuser" method="post" style="display: inline-block">
                    <input type="hidden" name="id" value="{{ user.id }}">
                    <button type="submit" class="btn btn-primary" style="border-color:white">USUN</button>
                </form>
            </td>
        </tr>
    {% endfor %}

    {% if pages > 1 %}
        <tr class="titleTr">
            <td colspan="5">
                {% for page in 1..pages %}
                    <form action="changepageuser" method="post" style="display: inline-block">
                        <input type="hidden" name="pagenumber" value="{{ page }}">
                        <button type="submit" class="btn btn-primary" style="border-color:white" name="page">{{ page }}</button>
                    </form>
                {% endfor %}
            </td>
        </tr>
    {% endif %}

{% endblock %}
