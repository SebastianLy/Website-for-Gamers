{%  extends 'base.html.twig' %}

{% block title %}
    LOGOWANIE
{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_label(form.name) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_widget(form.name) }} {{ form_errors(form.name) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_label(form.password) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_widget(form.password) }} {{ form_errors(form.password) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_row(form.submit) }}</td>
    </tr>

    {{ form_end(form) }}

{% endblock %}
