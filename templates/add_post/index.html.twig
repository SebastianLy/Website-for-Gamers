{%  extends 'base.html.twig' %}

{% block title %}
    DODAWANIE POSTU
{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_label(form.title) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_widget(form.title) }} {{ form_errors(form.title) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_label(form.content) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle; color:black">{{ form_widget(form.content) }} {{ form_errors(form.content) }}</td>
    </tr>

    <tr>
        <td style="text-align: center; vertical-align: middle;">{{ form_row(form.submit) }}</td>
    </tr>

    {{ form_end(form) }}

{% endblock %}
